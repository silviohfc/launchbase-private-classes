{% extends "layout.njk" %}


{% block content %}

    <div class="card table-container">
        <div class="table">
            <table width="100%">
                <thead>
                    <tr>
                        <th>Student</th>
                        <th>Email</th>
                        <th>Grade</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    {% for student in students %}
                        <tr>
                            <td>
                                <span style="background-image: url({{ student.avatar_url }});"></span>
                                {{ student.name }}
                            </td>
                            <td>
                                {{ student.email }}
                            </td>
                            <td>
                                {{ grade(student.grade) }}
                            </td>
                            <td>
                                <a href="/students/{{ student.id }}"><i class="fas fa-eye"></i></a>
                                <a href="/students/{{ student.id }}/edit"><i class="fas fa-pen"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="/students/create" id="newBtn">New Student</a>
    </div>

{% endblock content %}