<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="text"
            name="avatar_url"
            placeholder="http://"
            value="{{ student.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Name</div>
    <div>
        <input 
            type="text"
            name="name"
            placeholder="Student's name"
            value="{{ student.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Birth Date</div>
    <div>
        <input 
            type="date"
            name="birth"
            value="{{ student.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input 
            type="email"
            name="email"
            placeholder="example@example.com"
            value="{{ student.email }}"
        >
    </div>
</div>

<div class="item">
    <div>Grade</div>
    <div class="select">
        <select name="grade">
            <option value="ms6" {% if student.grade == "ms6" %} selected {% endif %}>Middle School 6th Grade</option>
            <option value="ms7" {% if student.grade == "ms7" %} selected {% endif %}>Middle School 7th Grade</option>
            <option value="ms8" {% if student.grade == "ms8" %} selected {% endif %}>Middle School 8th Grade</option>
            <option value="hs9" {% if student.grade == "hs9" %} selected {% endif %}>High School 9th Grade</option>
            <option value="hs10" {% if student.grade == "hs10" %} selected {% endif %}>High School 10th Grade</option>
            <option value="hs11" {% if student.grade == "hs11" %} selected {% endif %}>High School 11th Grade</option>
            <option value="hs12" {% if student.grade == "hs12" %} selected {% endif %}>High School 12th Grade</option>
        </select>
        <div class="select_arrow"></div>
    </div>
</div>

<div class="item">
    <div>Hourly Schedule</div>
    <div>
        <input 
            type="number"
            name="hours"
            placeholder="Ex.: 30h"
            value="{{ student.hours }}"
        >
    </div>
</div>