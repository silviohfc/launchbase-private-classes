{% extends "layout.njk" %}


{% block content %}
    
    <div class="card">
        <section class="avatar" style="background: url({{ student.avatar_url }}) no-repeat center; background-size: cover;"></section>
        <div class="details-wrap">
            <section class="details">
                <div class="details-content">
                    <h3>Details</h3>

                    <div class="item">
                        <div>Student</div>
                        <div>{{ student.name }}</div>
                    </div>

                    <div class="item">
                        <div>Birth Date</div>
                        <div>{{ student.birth }}</div>
                    </div>

                    <div class="item">
                        <div>Email</div>
                        <div>{{ student.email }}</div>
                    </div>

                    <div class="item">
                        <div>Grade</div>
                        <div>{{ student.grade }}</div>
                    </div>

                    <div class="item">
                        <div>Hourly Schedule</div>
                        <div>{{ student.hours }}</div>
                    </div>

                    <a href="/students/{{ student.id }}/edit" class="button">Edit</a>
                </div>
            </section>
        </div>
    </div>

{% endblock content %}