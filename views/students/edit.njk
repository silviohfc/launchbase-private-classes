{% extends "layout.njk" %}


{% block content %}

    <div class="card">

        <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center;"></section>
            <div class="details-wrap">
                <section class="details">
                        <div class="details-content">
                            <h3>Edit Teacher</h3>

                            <form method="POST" action="/teachers?_method=PUT">

                                {% include 'teachers/fields.njk' %}

                                <input type="hidden" name="id" value="{{ teacher.id }}">

                                <button type="submit">Save</button>
                            
                            </form>

                            <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
                                <input type="hidden" name="id" value="{{ teacher.id }}">
                                <button type="submit">Delete</button>
                            </form>
                        </div>

                </section>
            </div>
    
    </div>

{% endblock content %}